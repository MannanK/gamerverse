%main{id: "main"}
  %section{id: "user-info"}
    %h1 Profile Page
    %p
      Username:
      %span#username
        =@user.username
    
    %p
      Email:
      %span#email
        =@user[:email]
    
    %p
      Zip Code:
      %span#zip-code
        =@user[:zipcode]
    
    %p
      Bio:
      %span#bio
        =@user[:bio]
    
    = link_to "Edit Profile", profile_edit_path
  
  %section{id: "user-games"}
    %h1 Favorited Games
    
    %ol{class: "game-list"}
      -@favorite_games.each do |game|
        %li{class: "game-list-item"}
          %figure
            =image_tag(game.coverart, width: 150, alt: game.title)
            %figcaption
              %span.game-title
                =game.title

  %section{id: "user-events"}
    %h1 Favorited Events